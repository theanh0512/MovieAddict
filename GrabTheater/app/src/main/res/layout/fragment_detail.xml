<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    tools:context=".activities.DetailActivity$PlaceholderFragment"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:minHeight="200dp"
            android:adjustViewBounds="true"
            android:id="@+id/backdrop_image"
            android:scaleType="fitXY"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/backdrop_image"
            android:orientation="horizontal"
            android:background="#2d66a7"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:id="@+id/poster_title">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:adjustViewBounds="true"
                android:id="@+id/poster_image"
                android:layout_weight="1"
                android:scaleType="fitXY"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_weight="2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/title_textview"
                    android:textSize="20dp"
                    android:textColor="#bae7ef"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_date_textview"
                    android:textSize="15dp"
                    android:textColor="#bae7ef"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/vote_average_textview"
                    android:textSize="15dp"
                    android:textColor="#bae7ef"/>
            </LinearLayout>

            <com.like.LikeButton
                app:icon_type="heart"
                app:icon_size="25dp"
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/overview_textview"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/poster_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <FrameLayout
            android:id="@+id/youtube_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/overview_textview"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Related Movies"
            android:textStyle="bold"
            android:id="@+id/relatedMovies_textview"
            android:layout_below="@+id/youtube_fragment"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <!--<GridView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="420dp"-->
            <!--android:id="@+id/related_movies_gridView"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:columnWidth="90dp"-->
            <!--android:numColumns="auto_fit"-->
            <!--android:verticalSpacing="10dp"-->
            <!--android:horizontalSpacing="10dp"-->
            <!--android:stretchMode="columnWidth"-->
            <!--android:listSelector="#ffff0000"-->
            <!--android:gravity="center"-->
            <!--android:layout_below="@+id/relatedMovies_textview"/>-->
        <pham.ntu.grabtheater.ExpandableListView
            android:id="@+id/related_movies_gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:isScrollContainer="false"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:layout_below="@+id/relatedMovies_textview"
            android:verticalSpacing="20dp" />
        <!--<Button-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/like_button"-->
            <!--android:layout_below="@id/related_movies_gridView"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:text="Like"/>-->
    </RelativeLayout>
</ScrollView>
